<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="banq.smartline.MenuPrincipale">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>


    <include layout="@layout/content_menu_principale"
        android:id="@+id/include3" />



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/smartline"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Bienvenue"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="20dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="270dp"
        android:id="@+id/scrollView2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">



    <Button
        android:id="@+id/buttonRetrait"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:drawableLeft="@drawable/retrait"
        android:text="Retrait d'argent"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/buttonEspece"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:drawableLeft="@drawable/espece"
        android:text="Versement éspèce"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/buttonCheque"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:drawableLeft="@drawable/cheque"
        android:text="Versement chèque"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:drawableLeft="@drawable/info"
        android:text="Autre service"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        />
    </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
