<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="banq.smartline.VotreTour">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_votre_tour"
        android:id="@+id/include4" />


    <TextView
        android:id="@+id/textView_dispo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:text="Vous disposez de :"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:paddingBottom="250dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView_countdown"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="100dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_seconde"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:text="secondes"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:paddingTop="150dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView_dispo2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:text="pour passer au guichet nÂ°"
        android:textAlignment="center"
